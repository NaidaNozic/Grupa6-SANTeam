@model IEnumerable<Implementacija.Models.Kolekcija>

@{
    ViewData["Title"] = "Index";
}

<style>
    body {
        color: snow;
        background-image: url("https://i.ibb.co/vjZzNLC/image.png");
        height: 30%;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }
    .User{
        width:100%;
        margin-bottom:5%;
    }
    .Lista {
        background-color: rgb(0, 0, 0,0.7);
        width:60%;
    }
    .Lista li:hover{
        background-color: rgb(255, 255, 255,0.5);
    }
   
   
</style>

<div><img style="height:6em" src="https://i.ibb.co/n0bPk5B/logo-movie-removebg-preview.png" /><br /></div>

<div class="User">
    <center>
        <img style="height:5em" src="https://i.ibb.co/NyzBBdb/icons8-user-64.png" /><br />
        <p style="color:white;margin-left:10px;font-size:30px;margin-top:10px;font-weight:bold">@User.Identity.Name</p>
        <p style="color:white;margin-left:10px;font-size:25px;margin-top:10px">Your Collections</p>
    </center>
</div>

<div class="Lista">
    <div>
@foreach (var item in Model) {
        <ul>
            <li style="font-size:30px">
                @Html.DisplayFor(modelItem => item.Naziv)
            </li>
        </ul>
}
</div>
</div>


