@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager



<ul class="navbar-nav">
  
@if (SignInManager.IsSignedIn(User))
{
    <div class="text-center">
        <img style="height: 2em"  src= "~/lib/images/user.png"/>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" >My Profile </a>
    </li>
    </div>

    <div class="text-center">
        <img style="height: 2em"  src= "~/lib/images/notifications.png"/>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-controller="Obavijest" title="Manage">Notifications </a>
    </li>
    </div>


    <div class="text-center">
        
        
        <li class="nav-item">
            <img style="height: 2em"  src= "~/lib/images/logout.png"/>
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>

    </div>


}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login" style="color:red">Login</a>
    </li>
}
</ul>
